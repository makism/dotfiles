{
    "workbench.productIconTheme": "fluent-icons",
    "workbench.colorTheme": "Chromodynamics",
    "workbench.startupEditor": "none",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.enablePreview": false,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.splitInGroupLayout": "vertical",
    "editor.minimap.size": "fill",
    "editor.minimap.renderCharacters": false,
    "editor.cursorStyle": "block-outline",
    "editor.cursorBlinking": "smooth",
    "editor.inlineSuggest.enabled": true,
    "editor.lineNumbers": "relative",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.renderWhitespace": "all",
    "editor.suggest.showInterfaces": false,
    "editor.fontLigatures": "'zero', 'ss01', 'ss02', 'ss03', 'ss04','ss05', 'ss06',  'ss07', 'ss08', 'ss09', 'ss10', 'ss11', 'ss12', 'ss13', 'ss14'",
    "editor.fontFamily": "'JuliaMono Medium'",
    "editor.fontSize": 12,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "github.copilot.enable": {
        "*": true,
        "plaintext": true,
        "markdown": true,
        "scminput": false,
        "yaml": true
    },
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,
    "julia.execution.resultType": "both",
    "vim.highlightedyank.enable": true,
    "bracketPairColorizer.depreciation-notice": false,
    "settingsSync.ignoredExtensions": [],
    "extensions.autoUpdate": "onlyEnabledExtensions",
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path.linux": "/home/makism/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.kubectl-path.linux": "/home/makism/.local/state/vs-kubernetes/tools/kubectl/kubectl"
    },
    "diffEditor.ignoreTrimWhitespace": false,
    "git.confirmSync": false,
    "explorer.confirmDelete": false,
    "files.autoSave": "afterDelay",
    "redhat.telemetry.enabled": false,
    "terminal.integrated.enableMultiLinePasteWarning": false,
    "terminal.integrated.inheritEnv": false,
    "terminal.integrated.cursorBlinking": true,
    "[python]": {
        "editor.rulers": [
            88,
            120
        ],
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "charliermarsh.ruff",
    },
    "python.defaultInterpreterPath": "/opt/anaconda3/envs/beam",
    "python.languageServer": "Pylance",
    "python.poetryPath": "/opt/venv/bin/poetry",
    "python.pipenvPath": "/opt/venv/bin/pipenv",
    "python.testing.pytestPath": "/opt/venv/bin/pytest",
    "python.testing.unittestEnabled": true,
    "python.testing.pytestEnabled": true,
    "python.analysis.autoSearchPaths": true,
    "python.analysis.typeCheckingMode": "standard",
    "python.analysis.fixAll": [],
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
}